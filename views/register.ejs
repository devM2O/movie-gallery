<%- include('partials/loginHeader'); %>


<h1 class="h4 text-gray-900 mb-4"><i class="fas fa-user-plus" display="inline-block;"></i> REGISTER</h1>
<%- include ./partials/messages %>
</div>
<form class="user" action="/users/register" method="post">
  <div class="form-group">
    <input type="name" name="name" autocomplete="on" class="form-control form-control-user" value="<%= typeof name != 'undefined' ? name: '' %>" placeholder="Enter Username" style="background: rgb(120,111,115);
  background: radial-gradient(circle, rgba(120,111,115,1) 3%, rgba(148,187,233,1) 100%);color: black;">
  </div>
  <div class="form-group">
    <input type="email" name="email" autocomplete="on" class="form-control form-control-user" id="exampleInputEmail" aria-describedby="emailHelp" value="<%= typeof email != 'undefined' ? email: '' %>" placeholder="Enter Email Address" style="background: rgb(120,111,115);
  background: radial-gradient(circle, rgba(120,111,115,1) 3%, rgba(148,187,233,1) 100%);color: black;">
  </div>
  <div class="form-group">
    <input type="password" name="password" autocomplete="off" class="form-control form-control-user" id="exampleInputPassword" value="<%= typeof email != 'undefined' ? password: '' %>" placeholder="Create Password" style="background: rgb(120,111,115);
  background: radial-gradient(circle, rgba(120,111,115,1) 3%, rgba(148,187,233,1) 100%);color: black;">
  </div>
  <div class="form-group">
    <input type="password" name="repassword" autocomplete="off" class="form-control form-control-user" id="exampleInputPassword" value="<%= typeof email != 'undefined' ? password: '' %>" placeholder="Confirm Password" style="background: rgb(120,111,115);
  background: radial-gradient(circle, rgba(120,111,115,1) 3%, rgba(148,187,233,1) 100%);color: black;">
  </div>


  <button type="submit" name="button" class="btn btn-primary btn-user btn-block">Sign Up</button>
</form>

<hr>

<div class="text-center">
  <p style="display:inline-block;color:black;opacity:0.7;">Already have an account?</p>
  <a class="small" href="/users/login">Login</a>
</div>

</div>
