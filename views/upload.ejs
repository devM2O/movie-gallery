<%- include('partials/topNav'); %>

<!-- Begin Page Content -->
<div class="container-fluid">

  <% if(message){ %>
  <div style="text-align: center;" class="alert message alert-<%= message.type %>">
    <strong><%= message.intro %> </strong><%= message.message %>
  </div>
  <% } %>

  <form class="md-form" action="/upload" method="post" enctype="multipart/form-data">

    <div class="row">


        <div class="file-field mb-3">
          <div class="mb-3" style="width:150px;height:200px;border-radius: 10px;overflow: hidden;perspective: 1px;margin-top:50px;">
            <img src="/img/mh2.jpg" class="img-fluid" alt="example placeholder" style="width: 150px;
            height: 200px;
            object-fit: cover;">
          </div>
          <div class="d-flex justify-content">
            <div class="btn btn-mdb-color btn-rounded float-left">

              <input type="file" name="uploadImage">

            </div>
          </div>
        </div>
    </div>

    <div class="form-group">
      <input class="form-control col-2" type="text" name="adminID" value="<%= id %>" readonly>
      <label for="basic-url">Rating</label>
      <input class="form-control col-2" type="text" name="rating" value="" autocomplete="off">
      <label for="basic-url">Movie Name</label>
      <input class="form-control col-10" type="text" name="movieN" value="" autocomplete="off">
      <label for="basic-url">Download Link</label>
      <input class="form-control col-8" type="text" name="dLink" value="" autocomplete="off">
      <label for="basic-url">Review</label>
      <textarea class="form-control" name="review" rows="8" cols="80" autocomplete="off"></textarea>
    </div>

    <button class="btn btn-primary" type="submit" name="button">publish</button>

  </form>

</div>
<!-- /.container-fluid -->


<%- include('partials/footer'); %>
